    <swiper-item>
      <navigator
        hover-class="none"
        target="miniProgram" 
        open-type="navigate" 
        version="release"
        class="swiper-item">
        <view class="img-p">
          <!-- <image mode="widthFix" src="./images/微信图片_20200712103220.jpg"></image> -->
          <image mode="aspectFit" src="./images/pic.jpg"></image>
          <view class="msg text-orange light">
            <!-- <text class="cu-btn radius bg-orange">一键P图</text> -->
            <view></view>
            <!-- <text class="sub-title">背景图片随意换</text> -->
          </view>
        </view>
      </navigator>
    </swiper-item>
    <swiper-item>
      <navigator
        hover-class="none"
        target="miniProgram" 
        open-type="navigate" 
        version="release"
        class="swiper-item">
        <view class="img-p">
          <!-- <image mode="widthFix" src="./images/3001677327372_.pic.jpg"></image> -->
          <image mode="widthFix" src="./images/pic.jpg"></image>
          <view class="msg text-blue light">
            <!-- <view class="cu-btn radius bg-blue text-white">下载</view> -->
            <view></view>

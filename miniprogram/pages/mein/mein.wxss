/* miniprogram/pages/mein/mein.wxss */
.scrollPage {
  height: 100vh;
}
.user-info .cu-avatar {
	overflow: hidden;
}

.my-info {
	width: 100%;
}

.user-info .nickName {
  margin-left: 1em;
  text-shadow: none;
  display: inline-block;
  vertical-align: middle;
}

.user-info .signIn {
	/* height: 100%; */
	vertical-align: middle;
	line-height: 120rpx;
  float: right;
  text-shadow: none;
}

.UCenter-bg {
	background: #3E85EE;
  height: 280rpx;
  display: flex;
  justify-content: center;
  /* padding-top: 40rpx; */
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

.github .text-blue{
  padding: 10px 0;
}